
.content {
	height: 100%;
	background-color: rgb(235, 235, 235);
}
.block {
	background-color: white;
	display: flex;
	flex-direction: column;
	justify-content: left;
	margin-bottom: 20rpx;
}
.user_info {
	display: flex;
	flex-direction: row;
	justify-content: left;
	align-items: center;
	padding: 20rpx;
}
.date {
	color: rgb(153, 153, 153);
	font-size: 24rpx;
	padding: 0 20rpx;
}
.comments {
	padding: 20rpx;
	font-size: 32rpx;
}
.goods {
	padding: 20rpx 20rpx;
	background-color: rgb(250, 250, 250);
}
.user-name {
	font-size: 30rpx;
}
.goods {
	height: 100%;
	font-size: 34rpx;
	display: flex;
	flex-direction: row;
	justify-content: center;
}
.goods_name {
	height: 100%;
}
.goods_price {
	height: 100%;
	font-size: 40rpx;
	display: flex;
	flex-direction: column;
	justify-content: flex-end;
}
.goods_img {
	padding: 10rpx;
}
.goods_detail {
	padding: 10rpx 20rpx;
	height: 200rpx;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
}
.user_logo {
	padding-right: 20rpx;
}

