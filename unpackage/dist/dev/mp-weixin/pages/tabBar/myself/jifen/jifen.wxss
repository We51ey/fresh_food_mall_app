
.main {
	height: 100%;
	background-color: rgb(235, 235, 235);
}
.title {
	background-color: aliceblue;
	background-repeat: no-repeat;
	background-size: 100% 100%;
	height: 250rpx;
	display: flex;
	text-align: center;
	flex-direction: column;
	justify-content: center;
}
.num {
	font-size: 40rpx;
	padding-bottom: 30rpx;
}
.content {
	height: 100%;
	align-items: center;
	display: flex;
	flex-direction: column;
	/* text-align: center; */
	justify-content: start;
	padding: 10rpx 20rpx;
	margin: 0 20rpx;
}
.info {
	width: 95%;
	border-radius: 10rpx;
	padding: 20rpx 40rpx;
	background-color: white;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	margin: 10rpx 10rpx;
}
.info_right {
	display: flex;
	flex-direction: column;
	justify-content: center;
}
.detail {
	padding-bottom: 20rpx;
	font-size: 30rpx;
}
.date {
	color: rgb(153, 153, 153);
	font-size: 28rpx;
}

